@using Servicios;

@{
  Sesion sesionActual = this.Session["SESION_USER"] as Sesion;
}

<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="~/Content/themes/cupertino/jquery-ui.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" href="~/Content/navbar_custom.css"/>

    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <style>
      .divTable {
        display: table;
        margin: 40px;
        width: 100%;
      }
      .divTable > div {
        display: table-row;
      }
      .divTable > div > div {
        display: table-cell;
      }
      .mainTitulo {
        font-family: "Old English Text MT";
        font-size: 36pt;
      }
      .subTitulo {
        font-family: "Segoe UI";
        font-size: 24pt;
      }
        .input-validation-error {
            background-color: red;

        }
    </style>
  </head>

  <body>
    <header>
      <div class="container" style="margin-top: 20px;">
        <div class="row">
          <div class="col-sm-2">
            <img src="../Imagenes/Horror.png" style="margin: 0 auto;" />
          </div>
          <div class="col-sm-4">
            <div>
              <div class="mainTitulo">Oh my book!</div>
              <div class="subTitulo">Sitio de Libros</div>
            </div>
          </div>
          <div class="col-sm-6" style="text-align: center;">
            <img src="../Imagenes/libros-3.jpg" height="150" style="width: 100%;"/>
          </div>
        </div>
      </div>
    </header>

    <div class="container" style="margin-top: 20px;">
      @Html.Action("Menu", "MainMenu")
    </div>

    <div class="container">
      @RenderBody()
    </div>

    <footer>
      Copyright Polo Tecnologico 2015
    </footer>
  </body>
</html>
